{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "baseUrl": ".",
        "outDir": "./lib",
        "sourceMap": true,
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@controllers": ["controllers"],
            "@interfaces": ["interfaces"],
            "@serializers": ["serializers"],
            "@services": ["services"],
            "@validators": ["validators"],
            "@entities": ["entities"],
            "@middleware": ["middleware"],
            "@dal": ["dal"],
            "@errors": ["errors"],
            "@logger": ["logger"]
        }
    },
    "exclude": [
        "node_modules", "lib"
    ],
    "moduleResolution": "node"
}
